doctype html 
html(lang="en")
    head 
        title= 'Book List'
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous") 
         
    body.bg-secondary 
        center
            h1= 'Book List'
        hr
        div.container
            a(href="/home" class="btn btn-primary my-3")= "Home"
            table.table.table-dark.table-striped.shadow-lg.rounded
                tr 
                    th= "Book Name"
                    th= "Price"
                    th= "Author Name"
                    th= "Quantity"
                    th= "Action"
                for book in bookList
                    tr 
                        td= book.bname
                        td= book.price
                        td= book.aname
                        td= book.qty
                        td
                            .d-flex 
                                a.btn.btn-warning(href=`/books/${book._id}` data-doc=`${book._id}`)= "Edit" 
                                a.btn.btn-danger.mx-2(data-doc=`${book._id}`)= "Delete" 
        script(src="/script.js")

