doctype html 
html(lang="en")
    head 
        title= 'Add Customer'
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
    body.bg-secondary 
        center
            h1= 'Add Customer'
        hr
        .container 
            if typeof alert != 'undifined' 
                p= alert  
        div(style="margin: 50px 600px 50px 600px")
            form(method="POST" action="/customers/add" enctype="multipart/form-data") 
                label.form-label.mx-2= "Name"
                input.form-control.rounded.shadow-lg(type="text" name="name" id="name" placeholder="Name")
                br
                label.form-label.mx-2= "Select File"
                input.form-control.rounded.shodow-lg(type="file")
                br
                label.form-label.mx-2= "Email"
                input.form-control.rounded.shadow-lg(type="text" name="email" id="" placeholder="Email")
                br
                label.form-label.mx-2= "Password"
                input.form-control.rounded.shadow-lg(type="password" name="password" placeholder="password")
                br
                label.form-label.mx-2= "Phone No"
                input.form-control.rounded.shadow-lg(type="text" name="phonenumber" placeholder="Phone No")
                br
                center 
                    input.btn.btn-success.rounded.shadow-lg(type="submit" value="Add" style="padding: 10px 40px")