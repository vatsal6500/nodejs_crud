doctype html 
html(lang="en")
    head 
        title= 'Customer List'
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
    body.bg-secondary 
        center
            h1= 'Customer List'
        hr
        div.container
            a(href="/home" class="btn btn-primary my-3")= "Home"
            a(href="/customers/addnew" class="btn btn-primary my-3 mx-3")= "Add New"
            table.table.table-dark.table-striped.shadow-lg.rounded
                tr 
                    th= "Name"
                    th= "Profile"
                    th= "Email"
                    th= "Password"
                    th= "Phone No"
                    th= "Action"
                for customer in customerList
                    tr 
                        td= customer.name
                        td
                            img(src=`/profile/${customer.photo}`, alt="image not found", style="width:100px; height:100px")
                        td= customer.email
                        td= customer.password
                        td= customer.phonenumber
                        td
                            div.d-flex
                                form.mx-2(method="POST", action=`/customers/edit`)
                                    input(type="hidden", value=`${customer._id}`, id="id", name="id")
                                    input.btn.btn-warning(type="submit" value="Edit")
                                form(method="POST", action=`/customers/delete`)
                                    input(type="hidden", value=`${customer._id}`, id="id", name="id")
                                    input.btn.btn-danger(type="submit" value="Delete")