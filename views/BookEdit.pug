doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
        title= title  
    body.bg-secondary 
        center 
            h1= title 
        hr
        div(style="margin: 50px 600px 50px 600px")
            form(method="POST" action=`/books/edit`) 
                input(type="hidden", name="id", value=`${List._id}`)
                label.form-label.mx-2.mx-3= "Book Name"
                input.form-control.rounded.shadow-lg(type="text" value=`${List.bname}` name="bname" placeholder="bname")
                br
                label.form-label.mx-2.mx-3= "Price"
                input.form-control.rounded.shadow-lg(type="text" value=`${List.price}` name="price" placeholder="price")
                br
                label.form-label.mx-2.mx-3= "Author Name"
                input.form-control.rounded.shadow-lg(type="text" value=`${List.aname}` name="aname" placeholder="aname")
                br
                label.form-label.mx-2.mx-3= "Quantity"
                input.form-control.rounded.shadow-lg(type="text" value=`${List.qty}` name="qty" placeholder="qty")
                br
                center 
                    input.btn.btn-success.rounded.shadow-lg(type="submit" value="Edit" style="padding: 10px 40px")